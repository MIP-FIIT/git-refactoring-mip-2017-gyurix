<?xml version="1.0" encoding="UTF-8"?>
<project name="module_spigotlib" default="compile.module.spigotlib">
  <dirname property="module.spigotlib.basedir" file="${ant.file.module_spigotlib}"/>
  
  <property name="module.jdk.home.spigotlib" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.spigotlib" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.spigotlib" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.spigotlib" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="spigotlib.output.dir" value="${module.spigotlib.basedir}/target/classes"/>
  <property name="spigotlib.testoutput.dir" value="${module.spigotlib.basedir}/target/test-classes"/>
  
  <path id="spigotlib.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="spigotlib.module.production.classpath">
    <path refid="${module.jdk.classpath.spigotlib}"/>
    <path refid="library.spigot_server.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.8.7-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.8-snapshot.classpath"/>
    <pathelement location="${configfile.output.dir}"/>
  </path>
  
  <path id="spigotlib.runtime.production.module.classpath">
    <pathelement location="${spigotlib.output.dir}"/>
    <path refid="library.spigot_server.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.8.7-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.8-snapshot.classpath"/>
    <path refid="configfile.runtime.production.module.classpath"/>
  </path>
  
  <path id="spigotlib.module.classpath">
    <path refid="${module.jdk.classpath.spigotlib}"/>
    <pathelement location="${spigotlib.output.dir}"/>
    <path refid="library.spigot_server.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.8.7-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.8-snapshot.classpath"/>
    <pathelement location="${configfile.testoutput.dir}"/>
    <pathelement location="${configfile.output.dir}"/>
  </path>
  
  <path id="spigotlib.runtime.module.classpath">
    <pathelement location="${spigotlib.testoutput.dir}"/>
    <pathelement location="${spigotlib.output.dir}"/>
    <path refid="library.spigot_server.classpath"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.8.7-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.8-snapshot.classpath"/>
    <path refid="configfile.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.spigotlib">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.spigotlib">
    <patternset refid="excluded.from.module.spigotlib"/>
  </patternset>
  
  <path id="spigotlib.module.sourcepath">
    <dirset dir="${module.spigotlib.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="spigotlib.module.test.sourcepath">
    <dirset dir="${module.spigotlib.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.spigotlib" depends="compile.module.spigotlib.production,compile.module.spigotlib.tests" description="Compile module SpigotLib"/>
  
  <target name="compile.module.spigotlib.production" depends="register.custom.compilers,compile.module.configfile" description="Compile module SpigotLib; production classes">
    <mkdir dir="${spigotlib.output.dir}"/>
    <javac2 destdir="${spigotlib.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.spigotlib}/javac">
      <compilerarg line="${compiler.args.spigotlib}"/>
      <bootclasspath refid="spigotlib.module.bootclasspath"/>
      <classpath refid="spigotlib.module.production.classpath"/>
      <src refid="spigotlib.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.spigotlib"/>
    </javac2>
    
    <copy todir="${spigotlib.output.dir}">
      <fileset dir="${module.spigotlib.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.spigotlib.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.spigotlib.tests" depends="register.custom.compilers,compile.module.spigotlib.production" description="compile module SpigotLib; test classes" unless="skip.tests">
    <mkdir dir="${spigotlib.testoutput.dir}"/>
    <javac2 destdir="${spigotlib.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.spigotlib}/javac">
      <compilerarg line="${compiler.args.spigotlib}"/>
      <bootclasspath refid="spigotlib.module.bootclasspath"/>
      <classpath refid="spigotlib.module.classpath"/>
      <src refid="spigotlib.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.spigotlib"/>
    </javac2>
    
    <copy todir="${spigotlib.testoutput.dir}">
      <fileset dir="${module.spigotlib.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.spigotlib" description="cleanup module">
    <delete dir="${spigotlib.output.dir}"/>
    <delete dir="${spigotlib.testoutput.dir}"/>
  </target>
</project>